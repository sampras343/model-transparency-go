#!/usr/bin/env bash

# Check availability of utilities.
for util in jq; do
	if ! type -P "${util}" >/dev/null; then
		echo "Could not find '${util}' in PATH."
		exit 1
	fi
done

DIR=$(dirname "$0")

cd "${DIR}" || exit 1

for tc in test-*.sh; do
	# Skip tests that require special setup (run separately in CI)
	case "${tc}" in
	test-interoperability.sh|test-sign-verify-allversions.sh|test-hardening.sh|test-otel.sh)
		echo -e "\n>>> Skipping ${tc} (requires special setup)"
		continue
		;;
	esac
	echo -e "\n>>> Running ${tc}"
	./"${tc}" || exit 1
done

exit 0
